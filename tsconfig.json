{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./build",
		"rootDir": "./src",
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"removeComments": true,
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
